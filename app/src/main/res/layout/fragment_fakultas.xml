<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FakultasFragment"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="FAKULTAS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="UMB memiliki 6 Faklutas dan 1 program Pasca-Sarjana"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/blue_ocean"
        android:layout_marginStart="80dp"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="15sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/keperawatan"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keperawatan"
        android:textSize="12sp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:layout_marginStart="90dp"
        android:layout_marginTop="265dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/pink"
        android:layout_marginStart="240dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="15sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/farmasi"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
